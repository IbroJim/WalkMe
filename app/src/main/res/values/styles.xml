<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="LinearStyleHome">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/user_shape_background</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="TextHomeTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextMyself">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">4</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTagGroup" parent="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="atg_backgroundColor">@color/myDialig</item>
        <item name="atg_borderColor">@color/myDialig</item>
        <item name="atg_textColor">@color/white</item>
        <item name="atg_borderStrokeWidth">10dp</item>
        <item name="atg_verticalPadding">3dp</item>
        <item name="atg_horizontalPadding">3dp</item>
    </style>

</resources>
