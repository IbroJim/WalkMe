<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <!--activity_home style-->
    <style name="LinearStyleHome">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/user_shape_background</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="LinearStyleHomeMySelf" parent="LinearStyleHome">
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="TextHomeTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="EditMyself">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">4</item>
        <item name="android:maxLines">4</item>
    </style>
    <style name="TextTagGroup" parent="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="atg_backgroundColor">@color/myDialig</item>
        <item name="atg_borderColor">@color/myDialig</item>
        <item name="atg_textColor">@color/white</item>
        <item name="atg_borderStrokeWidth">1dp</item>
        <item name="atg_verticalPadding">3dp</item>
        <item name="atg_horizontalPadding">10dp</item>
    </style>
    <style name="HomeEditTag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">Добовать интерес</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!--home_navigation style-->
    <style name="HomeNavigation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="HomeNavigationImage" parent="HomeNavigation">
        <item name="android:layout_height">30dp</item>
    </style>

    <!-- activity_registry style-->
    <style name="InputLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="EditInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

</resources>
